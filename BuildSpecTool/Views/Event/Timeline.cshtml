@model BuildSpecTool.Models.Event

@using (Html.BeginForm("Save", "Event"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <p>Timeline</p>
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.BuildDueDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.BuildDueDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuildDueDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ClientReviewDueDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ClientReviewDueDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ClientReviewDueDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ClientEditDueDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ClientEditDueDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ClientEditDueDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Live_EventDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Live_EventDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Live_EventDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <div class="btn-group" role="group" aria-label="Save and Back Buttons">
                        <a class="btn btn-default" href="~/SiteManagement/Index/@Model.Id">Back</a>
                        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Submit" : "Update")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

